<% obj_id = "#{obj.class.name.tableize.singularize}_#{field}" -%>
<ul class="tabstrip tinytabs">
  <li class="selected" id="<%=obj_id %>_visual"><%= link_to_function "Visual", "toggleEditor('#{obj_id}', true);" %></li>
  <li id="<%=obj_id %>_html"><%= link_to_function "HTML", "toggleEditor('#{obj_id}', false);" %></li>
</ul>
<%= text_area_tag("#{obj.class.name.tableize.singularize}[#{field}]", obj.send(field), :rows => 4, :class => "mceEditor",
                  :style => "width: 100%;", :id => obj_id) %>