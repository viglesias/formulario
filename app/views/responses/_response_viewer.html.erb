<div class="responseheader" id="responseheader">
    <table width="100%">
            <tr>
                    <td align="left" id="responsetitle">
                    </td>
                    <td align="right">
                      <span id="response_wait_toolbar" style="display: none;">
                        Por favor espere...
                      </span>
                      <span id="response_delete_toolbar" style="display: none;">
                        Are you sure? <%= button_to_function "Si", 'confirmDelete();' %>
                        <%= button_to_function "No", 'cancelDelete();' %>
                      </span>
                      <span id="response_show_toolbar">
                          <%= button_to_function "Editar", 'editResponse();' %>
                          <%= button_to_function "Borrar", 'deleteResponse();' %>
                        <%= button_to_function "Cerrar", 'hideResponseViewer();' %>
                      </span>
                      <span id="response_edit_toolbar" style="display: none;">
                        <%= button_to_function "Guardar", 'saveEditedResponse();' %>
    					<%= button_to_function "Cancelar", 'showResponse(ResponseViewer.showingResponseId);' %>
    		      </span>
                    </td>
            </tr>
    </table>
</div>
<div id="responsebody">
</div>
